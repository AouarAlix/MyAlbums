{% extends 'base.html.twig' %}

{% block title %}Bibliotheque{% endblock %}

{% block main %}
    <h1>Bibliotheque</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bibliotheque.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ bibliotheque.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ bibliotheque.description }}</td>
            </tr>
            <tr>
                <th>Proprietaire</th>
                <td>{{ bibliotheque.proprietaire }}</td>
            </tr>
            <tr>
                <th>Albums</th>
                <td>
                    {% for album in bibliotheque.albums %}
                    <a href="{{ path("album_show", {"id": album.id}) }}">{{ album }}</a><br>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_bibliotheque_index') }}">back to list</a>

    <a href="{{ path('app_bibliotheque_edit', {'id': bibliotheque.id}) }}">edit</a>

    {{ include('bibliotheque/_delete_form.html.twig') }}
{% endblock %}
