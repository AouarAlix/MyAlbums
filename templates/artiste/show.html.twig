{% extends 'base.html.twig' %}

{% block title %}Artiste{% endblock %}

{% block main %}
    <h1>Artiste</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artiste.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ artiste.Nom }}</td>
            </tr>
            <tr>
                <th>NbMembres</th>
                <td>{{ artiste.NbMembres }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ artiste.Genre }}</td>
            </tr>
            <tr>
                <th>Albums</th>
                <td>
                    {% for album in albums %}
                    <a href="{{ path('album_show', {'id': album.getId }) }}" >{{ album }}</a><br>
                    {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_artiste_index') }}">back to list</a>

    <a href="{{ path('app_artiste_edit', {'id': artiste.id}) }}">edit</a>

    {{ include('artiste/_delete_form.html.twig') }}
{% endblock %}
